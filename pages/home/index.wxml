<view style="background-color: rgb(240, 240, 240);">
<view class="container">
  <view class="search flexWrp">
    <view class="search-left flexItem" bindtap="Search">
      <image src="../../icons/search.png"></image>
      <input fixed="true" placeholder="搜索动态" placeholder-class="search-placeholder" />
    </view>
    <!--view class="search-right flexItem" bindtap="upper">
      <!-- <image src="../../images/lighting.png"></image> >
    </view-->
  </view>
</view>

    <scroll-view scroll-y="true" style="height: 100%; width: 100%; display: flex; flex-direction: column; margin-top:20rpx;margin-bottom:10rpx;">
        <view style="width: 100%; height: auto; margin-bottom:10px;">
            <swiper indicator-dots="{{indicatorDots}}" vertical="{{vertical}}"
                    autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" style="width:100%;height:365rpx;">
                <block wx:for-items="{{swipers}}">
                    <swiper-item bindtap="MoreInfo" style="background-color: rgb(255, 255, 255);">
                      <!--image class="back2" src="/images/xuan.jpg"></image-->
                        <!--image  bindtap="MoreInfo1" class="swiper-item" src="{{item.image}}" mode="aspectFill"/-->                       <text class="swipersUp">{{item.up}}\n</text>
                      <text class="swipersDown">{{item.down}}</text>
                    </swiper-item>
                </block>
            </swiper>
        </view>

        <view class="big-logo">
            <block wx:for-items="{{logos}}">
                <view class="logoinfo" bindtap="MoreClass" data-index='{{index}}'>
                    <image  style="width:110rpx; height: 110rpx;" src="{{item.image}}" mode="aspectFit"/>
                    <text class="logotext">{{item.title}}</text>
                </view>
            </block>
        </view>

        <view style="margin-top:10rpx">
          <view wx:for="{{couplets}}" class="couplets_list">
            <view bindtap="MoreDetail"  class="couplets_type" data-coupletId="{{item.coupletsexistedId}}">
                <view>上联：{{item.coupletsexistedUpcouplets}}</view>
                <view>下联：{{item.coupletsexistedDowncouplets}}</view>
            </view>
          </view>
        </view>
    </scroll-view>
</view>
