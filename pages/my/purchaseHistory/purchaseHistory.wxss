.total {
  display: flex;
  flex-direction: column;
  margin-left: 5%;
  margin-right: 5%;
}

.title {
  font-size: 16px;
}

.middle {
  margin-top: 5%;
  margin-bottom: 5%;
}

.detailMessage {
  margin-top: 5%;
  font-size: 14px;
}

.messageTime {
  display: flex;
  width: 60%;
  font-size: 12px;
  margin-bottom: 5%;
  color: gray;
}

.line {
  width: 100%;
  background-color: #ebebeb;
  height: 1px;
}

.more {
  display: flex;
  font-size: 12px;
  color: grey;
  width: 40%;
}
.nothing {
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80px 0px;
}

.nothingImage {
  width: 100px;
  height: 100px;
}

.nothingText {
  padding: 14px;
  font-size: 14px;
  color: #818a8e;
}

