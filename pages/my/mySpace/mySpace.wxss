.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /*padding: 200rpx 0;*/
  box-sizing: border-box;
  background: #f0f4f3;
}

.container {
  margin-top: 100rpx;
}

.topTab {
  width: 750rpx;
  height: 100rpx;
  background: rgb(204, 6, 6);
  color: rgb(250, 150, 150);
  font-size: 28rpx;
  line-height: 100rpx;
  box-shadow: 0 2px 2px #bebebe;
  margin: 0 0 8rpx 0;
  z-index: 9999;
  position: fixed;
  top: 0;
}

.toptab.active {
  color: #fff;
  border-bottom: solid 2px #fff;
}

.flexWrp {
  display: flex;
}

.flexTab {
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: stretch;
}

.flexItem {
  flex-grow: 1;
  text-align: center;
}

.container {
  padding: 0;
  font-size: 14rpx;
  color: #000;
}

.container .touchItem {
  display: flex;
  justify-content: space-between;
  overflow: hidden;
}

.delete {
  border-top: 2px solid #eee;
  border-bottom: 2px solid #eee;
  background-color: #e43e43;
  width: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 14px;
  -webkit-transform: translateX(180rpx);
  transform: translateX(180rpx);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.touch-move-active .feedItem, .touch-move-active .delete {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

.feedItem {
  width: 690rpx;
  padding: 30rpx 30rpx 20rpx;
  margin: 7rpx 0 6rpx 0;
  background: #fff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  /* box-shadow: 0 2px 5px #eee; */
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(180rpx);
  transform: translateX(180rpx);
  margin-left: -177rpx;
}

.container .feedItem .feedSource {
  width: 690rpx;
  left: 0;
  height: 50rpx;
}

.container .feedItem .feedSource .avatar {
  position: relative;
  display: inline-block;
}

.container .feedItem .feedSource a {
  display: inline-block;
  height: 40rpx;
}

.container .feedItem .feedSource .avatar image {
  /*position: absolute;*/
  display: inline-block;
  width: 45rpx;
  height: 45rpx;
  border-radius: 45rpx;
  top: 10rpx;
  vertical-align: middle;
}

.container .feedItem .feedSource text {
  /*position: absolute;*/
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  vertical-align: middle;
  margin: 0 0 0 15rpx;
  color: #a0acac;
  font-size: 26rpx;
}

.container .feedItem .feedSource .itemMore {
  display: inline-block;
  width: 40rpx;
  height: 45rpx;
  float: right;
}

.container .feedItem .feedContent {
  padding: 10rpx 0 0 0;
}

.container .feedItem .feedContent .question text {
  font-size: 28rpx;
  font-weight: 600px;
  line-height: 40rpx;
  text-space: 5rpx;
}

.container .feedItem .feedContent .answerBody {
  padding: 10rpx 0 0 0;
  /*height: 10rpx;*/
  font-size: 24rpx;
  line-height: 28rpx;
  color: #5b5b5b;
}

.container .feedItem .feedContent .answerActions {
  width: 690rpx;
  padding: 10rpx 0 0;
  color: #a0acac;
}

.container .feedItem .feedContent .answerActions view {
  display: inline-block;
  vertical-align: text-bottom;
  padding: 0 10rpx 0 0;
  font-size: 24rpx;
}

.container .feedItem .feedContent .answerActions .postTime {
  margin-right: -1%;
  float: right;
}

.container .feedItem .feedContent .answerActions .dot ::after {
  content: "â€¢";
}

.container .feedItem .feedContent .question .label text {
  font-size: 24rpx;
  font-weight: 600px;
  line-height: 40rpx;
  color: rgb(212, 19, 19);
}

.container .nothing {
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80px 0px;
}

.nothingImage {
  width: 100px;
  height: 100px;
}

.nothingText {
  padding: 14px;
  font-size: 14px;
  color: #818a8e;
}
