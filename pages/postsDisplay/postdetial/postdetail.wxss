/* pages/postdetial/postdetail.wxss */

.container {
  padding: 0;
  font-size: 14rpx;
  background: #fff;
  color: #000;
}

.post {
  display: flex;
  flex-direction: column;
  position: relative;
  width: 100%;
  padding: 30rpx 10rpx 25rpx;
  background: #d64d4d;
  color: #fff;
  font-size: 19px;
  line-height: 55rpx;
  text-align: left;
}

.post .title {
  margin: 10rpx;
  font-size: 22px;
}

.poster-wrp {
  position: relative;
  width: 100%;
  height: 150rpx;
  background: #fff;
}

.poster-wrp .bg-half {
  position: absolute;
  width: 100%;
  height: 75rpx;
  background: #d64d4d;
}

.poster {
  display: flex;
  flex-direction: row;
  position: relative;
  margin: 0 auto;
  width: 630rpx;
  height: 90rpx;
  padding: 30rpx;
  background: #fff;
  border: solid 1px #ebebeb;
  border-radius: 4px;
  box-shadow: 0 1px 2px #bebebe;
}

.poster .avatar {
  flex: 1;
  width: 90rpx;
  height: 90rpx;
}

.poster .avatar image {
  display: inline-block;
  width: 90rpx;
  height: 90rpx;
  border-radius: 90rpx;
}

.poster .poster-info {
  flex: 5;
  text-align: left;
  padding: 10rpx 35rpx;
  line-height: 50rpx;
}

.poster .poster-info text {
  display: block;
}

.poster .poster-info .poster-name {
  font-size: 32rpx;
}

.poster .poster-info .poster-des {
  font-size: 22rpx;
  color: #808080;
  line-height: 28rpx;
}

.poster .follow {
  flex: 2;
  padding: 15rpx 0;
  font-size: 22rpx;
}

.poster .follow .notyet text {
  display: inline-block;
  padding: 15rpx 20rpx;
  color: #d64d4d;
  border: solid 2px #d64d4d;
  border-radius: 6rpx;
}

.poster .follow .already text {
  display: inline-block;
  padding: 15rpx 20rpx;
  background-color: #ebebeb;
  color: gray;
  border: solid 2px #ebebeb;
  border-radius: 6rpx;
}

.post-content {
  margin-top: 7px;
  padding: 32rpx 20rpx;
  width: 88%;
  background: rgb(253, 253, 253);
  border-radius: 10px;
  color: #454545;
  line-height: 44rpx;
}

.post-content text {
  font-size: 16px;
}

.post-do {
  display: flex;
  flex-direction: row;
  height: 50rpx;
  width: 100%;
}

.collection {
  width: 80rpx;
  height: 50rpx;
  margin-top: 7px;
  padding-top: 1.1%;
  padding-left: 55%;
  font-size: 10px;
  color: #a1a1a1;
  display: flex;
  flex-direction: row;
}

.like {
  width: 80rpx;
  height: 50rpx;
  margin-top: 7px;
  padding-top: 1.1%;
  padding-left: 2%;
  font-size: 10px;
  color: #a1a1a1;
  display: flex;
  flex-direction: row;
}

.comment {
  width: 80rpx;
  height: 50rpx;
  margin-top: 7px;
  padding-top: 1.1%;
  padding-left: 3.5%;
  font-size: 10px;
  color: #a1a1a1;
  display: flex;
  flex-direction: row;
}

image {
  width: 23px;
  height: 23px;
  display: inline-block;
  overflow: hidden;
}

.commentBox {
  width: 85%;
  margin-top: 15px;
  margin-bottom: 70px;
  padding-top: 13px;
  padding-bottom: 13px;
  padding-left: 12px;
  background-color: rgb(243, 243, 243);
  border-radius: 7px;
}

.commentBox .doreply {
  display: flex;
  flex-direction: row;
}

.commentBox .doreply .delete {
  font-size: 10px;
  padding-top: 6.5px;
  color: rgb(189, 189, 189);
}

.commentBox .noreply {
  color: rgb(212, 64, 64);
  padding-left: 15px;
  font-size: 14px;
}

.commentBox .eachReply {
  width: 93%;
  padding-top: 3px;
  padding-bottom: 3px;
}

.commentBox .eachReply .replyhead {
  margin-left: 8px;
  margin-top: 6px;
  width: 28px;
  height: 28px;
  border-radius: 100%;
  background-color: #fff;
}

.commentBox .eachReply .replylevel {
  font-size: 12px;
  line-height: 24px;
  color: rgb(196, 47, 47);
}

.commentBox .eachReply .replyuser {
  font-size: 15px;
  line-height: 24px;
  color: rgb(66, 65, 65);
}

.commentBox .eachReply .replycontent {
  font-size: 15px;
  line-height: 24px;
  color: rgb(92, 92, 92);
}

.commentBox .eachReply .replytime {
  padding-left: 70%;
  font-size: 10px;
  color: rgb(105, 104, 104);
}

.inputBox {
  position: fixed;
  bottom: 0.05%;
  left: 0.2%;
  width: 90%;
  height: 40px;
  padding: 15rpx 5%;
  margin-top: 20px;
  background: rgb(247, 247, 247);
  border-radius: 7px;
  display: flex;
  flex-direction: row;
  align-items: center;
  overflow: hidden;
}

.input {
  width: 80%;
  height: 40px;
  margin-left: 2rpx;
  overflow: hidden;
  background-color: rgb(252, 252, 252);
  border-radius: 8px;
}

.input .inputcomment {
  width: 100%;
  padding-left: 10rpx;
  font-size: 17px;
  max-height: 40px;
  background-color: rgb(252, 252, 252);
  border-radius: 8px;
  color: rgb(63, 62, 62);
  initial-letter-align: true;
}

.inputBox .like {
  width: 60px;
  height: 40px;
}

.inputBox image {
  width: 30px;
  height: 26px;
  padding-top: 7px;
  padding-left: 18px;
}
