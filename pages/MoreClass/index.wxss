  width: 100%;  
  height: 100%;  
  background-color: #fff;  
  color: #808080;  
}
.left-navbar{
  position:absolute;
  left:0;
  width:20%;
  height:100%;
  background-color:#eee;
  font-size:15px;
}
.left-navbar view{
  height:120rpx;
  line-height: 120rpx;
  text-align:center;
}
.active{
  background-color:#FFF;
  color:red;
  font-size:17px;
}

#right{
  position:absolute;
  right:0;
  width:80%;
  height:100%;
}
.img-banner{
  height:150rpx;
  width:100%;
}


