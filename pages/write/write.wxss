/* pages/write/write.wxss */

page {
  width: 100%;
  height: 100%;
}

.container {
  padding: 0;
  width: 100%;
  height: 80%;
  background-color: #fff;
  display: flex;
}

.selectLabel{
  margin-top: 2%;
  width: 92%;
  text-align: left;
  height: 55rpx;
  font-size: 32rpx;
  font-weight: 545;
  padding-top: 15rpx;
  padding-left: 20rpx;
  color: rgb(71, 69, 69);
  background-color: #fafafa;
  border-radius: 10px;
}

.selectLabel .label{
  color:  rgb(212, 19, 19);
  font-weight: 590;
  padding-left: 50px;
}

.title {
  margin-top: 2%;
  width: 92%;
  text-align: left;
  height: 70rpx;
  font-size: 36rpx;
  font-weight: 500;
  padding-top: 22rpx;
  padding-left: 20rpx;
  color: rgb(71, 69, 69);
  background-color: #fafafa;
  border-radius: 10px;
}

.row {
  flex: 1;
  display: flex;
  width: 92%;
  height: 10%;
  margin-top: 10rpx;
  padding-left: 20rpx;
  overflow: hidden;
  background-color: #fafafa;
  border-radius: 10px;
}

.row .text {
  flex: 1;
  padding-top: 20rpx;
  width: 90%;
  height: 10%;
  font-size: 17.8px;
  font-weight: 480;
  line-height: 26px;
  color: rgb(71, 69, 69);
}

.bottom {
  width: 60%;
  background: #fff;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  padding-right: 3px;
  padding-left: 4px;
}

.bottom .btn {
  flex: 1;
  line-height: 2;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  margin: 30rpx 3rpx;
}

.btn.success {
  background: #f7f7f7;
  font-size: 18px;
  color: rgb(216, 14, 14);
}

.handle{
  display: flex;
  flex-direction: row;
  width: 100%;
  margin-bottom: 0px;
}

.cancel
{
  width: 36.5%;
  font-size: 16px;
  color: rgb(216, 14, 14);
  line-height: 2;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  margin: 30rpx 3rpx;
}
